{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dragonbane-unbound.local/character-sheet.schema.json",
  "title": "Dragonbane Character Sheet",
  "title_sv": "Drakar och Demoner Rollformulär",
  "description": "JSON Schema for the Dragonbane (Drakar och Demoner) character sheet as printed on p.127 of DoD_Regelboken_v2. Models every field on the paper sheet, organized by visual section. This schema defines the runtime state of a character — all values that change during play.",
  "version": "1.0",
  "source": "DoD_Regelboken_v2.pdf p.127 (rollformulär)",
  "type": "object",
  "required": ["header", "attributes", "conditions", "derived_ratings", "skills", "weapon_skills", "secondary_skills", "heroic_abilities_and_spells", "weapons", "armor", "packing", "currency", "rest", "hit_points", "willpower_points", "death_saves"],
  "properties": {

    "header": {
      "title": "Header Fields",
      "title_sv": "Överskrifter",
      "description": "Identity and background fields across the top of the character sheet.",
      "type": "object",
      "required": ["character_name", "kin", "profession", "age"],
      "properties": {
        "player_name": {
          "title": "Player",
          "title_sv": "Spelare",
          "description": "Name of the real-world player.",
          "type": "string",
          "examples": ["Anna"]
        },
        "character_name": {
          "title": "Name",
          "title_sv": "Namn",
          "description": "The character's in-game name.",
          "type": "string",
          "examples": ["Joruna Blankenhjelm"]
        },
        "kin": {
          "title": "Kin",
          "title_sv": "Släkte",
          "description": "The character's kin (race/species). References kins from corebook-kins.json or monsterboken-kins.json.",
          "type": "string",
          "examples": ["Human"]
        },
        "kin_id": {
          "title": "Kin ID",
          "description": "Machine-readable kin identifier matching IDs in the rules data.",
          "type": "string",
          "examples": ["human"]
        },
        "age": {
          "title": "Age",
          "title_sv": "Ålder",
          "description": "Age category chosen during character creation.",
          "type": "string",
          "enum": ["Young", "Middle-Aged", "Old"],
          "examples": ["Middle-Aged"]
        },
        "profession": {
          "title": "Profession",
          "title_sv": "Yrke",
          "description": "The character's profession. References professions from corebook-professions.json.",
          "type": "string",
          "examples": ["Knight"]
        },
        "profession_id": {
          "title": "Profession ID",
          "description": "Machine-readable profession identifier.",
          "type": "string",
          "examples": ["knight"]
        },
        "weakness": {
          "title": "Weakness",
          "title_sv": "Svaghet",
          "description": "Character flaw from the d20 weakness table (optional during creation, but tracked here).",
          "type": ["string", "null"],
          "examples": ["Greedy"]
        },
        "appearance": {
          "title": "Appearance",
          "title_sv": "Utseende",
          "description": "Physical description or traits from the d20 appearance table. Multiple entries possible.",
          "type": "string",
          "examples": ["Weather-beaten face, silver tooth"]
        },
        "nickname": {
          "title": "Nickname",
          "description": "Optional epithet from the profession's nickname table. Not a field on the paper sheet but commonly used.",
          "type": ["string", "null"],
          "examples": ["Gyllenlans"]
        }
      }
    },

    "attributes": {
      "title": "Attributes",
      "title_sv": "Grundegenskaper",
      "description": "The six base attributes. Scale 3–18 (after age modifiers, capped at 18). On the paper sheet these appear in a column on the left side.",
      "type": "object",
      "required": ["STR", "CON", "AGL", "INT", "WIL", "CHA"],
      "properties": {
        "STR": {
          "title": "Strength",
          "title_sv": "Styrka (STY)",
          "abbreviation_sv": "STY",
          "description": "Raw physical muscle power.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [14]
        },
        "CON": {
          "title": "Constitution",
          "title_sv": "Fysik (FYS)",
          "abbreviation_sv": "FYS",
          "description": "Physical endurance and resistance.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [12]
        },
        "AGL": {
          "title": "Agility",
          "title_sv": "Smidighet (SMI)",
          "abbreviation_sv": "SMI",
          "description": "Body control, speed and fine motor skills.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [11]
        },
        "INT": {
          "title": "Intelligence",
          "title_sv": "Intelligens (INT)",
          "abbreviation_sv": "INT",
          "description": "Acuity, logic and reason.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [10]
        },
        "WIL": {
          "title": "Willpower",
          "title_sv": "Psykisk kraft (PSY)",
          "abbreviation_sv": "PSY",
          "description": "Willpower and mental focus.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [13]
        },
        "CHA": {
          "title": "Charisma",
          "title_sv": "Karisma (KAR)",
          "abbreviation_sv": "KAR",
          "description": "Personal radiance and empathy.",
          "type": "integer",
          "minimum": 3,
          "maximum": 18,
          "examples": [9]
        }
      }
    },

    "conditions": {
      "title": "Conditions",
      "title_sv": "Tillstånd",
      "description": "Six conditions, one per attribute. Printed as checkboxes beneath the attributes on the paper sheet. When active, the character has disadvantage on all rolls for skills linked to that attribute. All six active = cannot push rolls.",
      "type": "object",
      "required": ["exhausted", "sickly", "dazed", "angry", "scared", "disheartened"],
      "properties": {
        "exhausted": {
          "title": "Exhausted",
          "title_sv": "Utmattad",
          "linked_attribute": "STR",
          "description": "Disadvantage on all STR-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [false]
        },
        "sickly": {
          "title": "Sickly",
          "title_sv": "Krasslig",
          "linked_attribute": "CON",
          "description": "Disadvantage on all CON-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [false]
        },
        "dazed": {
          "title": "Dazed",
          "title_sv": "Omtöcknad",
          "linked_attribute": "AGL",
          "description": "Disadvantage on all AGL-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [false]
        },
        "angry": {
          "title": "Angry",
          "title_sv": "Arg",
          "linked_attribute": "INT",
          "description": "Disadvantage on all INT-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [true]
        },
        "scared": {
          "title": "Scared",
          "title_sv": "Rädd",
          "linked_attribute": "WIL",
          "description": "Disadvantage on all WIL-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [false]
        },
        "disheartened": {
          "title": "Disheartened",
          "title_sv": "Uppgiven",
          "linked_attribute": "CHA",
          "description": "Disadvantage on all CHA-based skill rolls.",
          "type": "boolean",
          "default": false,
          "examples": [false]
        }
      }
    },

    "derived_ratings": {
      "title": "Derived Ratings",
      "title_sv": "Sekundära egenskaper",
      "description": "Values calculated from attributes and kin. Printed below the attributes block on the paper sheet.",
      "type": "object",
      "required": ["damage_bonus_str", "damage_bonus_agl", "movement", "carrying_capacity"],
      "properties": {
        "damage_bonus_str": {
          "title": "Damage Bonus STR",
          "title_sv": "Skadebonus STY",
          "description": "Extra damage die for STR-based melee weapons. Null if STR <= 12, '1d4' if 13-16, '1d6' if 17-18.",
          "type": ["string", "null"],
          "examples": ["1d4"]
        },
        "damage_bonus_agl": {
          "title": "Damage Bonus AGL",
          "title_sv": "Skadebonus SMI",
          "description": "Extra damage die for AGL-based melee weapons. Null if AGL <= 12, '1d4' if 13-16, '1d6' if 17-18.",
          "type": ["string", "null"],
          "examples": [null]
        },
        "movement": {
          "title": "Movement",
          "title_sv": "Förflyttning",
          "description": "Movement rate in meters per round. Base from kin, modified by AGL bracket.",
          "type": "integer",
          "minimum": 4,
          "maximum": 16,
          "examples": [10]
        },
        "carrying_capacity": {
          "title": "Carrying Capacity",
          "title_sv": "Bärförmåga",
          "description": "Max packing slots = STR / 2 (round up). Backpack adds +2.",
          "type": "integer",
          "minimum": 2,
          "maximum": 11,
          "examples": [7]
        }
      }
    },

    "skills": {
      "title": "Skills",
      "title_sv": "Färdigheter",
      "description": "The 20 base skills. On the paper sheet these are listed with their linked attribute abbreviation. Each skill has a skill value (FV) and an improvement mark checkbox.",
      "type": "array",
      "minItems": 20,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["id", "value", "improvement_mark"],
        "properties": {
          "id": {
            "description": "Skill identifier matching corebook-skills.json.",
            "type": "string",
            "examples": ["svard"]
          },
          "name": {
            "description": "English skill name.",
            "type": "string",
            "examples": ["Swords"]
          },
          "name_sv": {
            "description": "Swedish skill name as printed on the paper sheet.",
            "type": "string",
            "examples": ["Svärd"]
          },
          "linked_attribute": {
            "description": "Attribute abbreviation (EN) this skill is based on.",
            "type": "string",
            "enum": ["STR", "CON", "AGL", "INT", "WIL", "CHA"],
            "examples": ["STR"]
          },
          "value": {
            "title": "Skill Value (FV)",
            "title_sv": "Färdighetsvärde (FV)",
            "description": "Current skill value. Base chance from attribute bracket; doubled if trained. Max 18. Written as a number on the paper sheet.",
            "type": "integer",
            "minimum": 3,
            "maximum": 18,
            "examples": [12]
          },
          "trained": {
            "description": "Whether this skill was chosen as a trained skill during creation.",
            "type": "boolean",
            "examples": [true]
          },
          "improvement_mark": {
            "title": "Improvement Mark",
            "title_sv": "Förbättringsmarkering",
            "description": "Checkbox on the paper sheet. Marked when a dragon (1) or demon (20) is rolled, or from session questions. Cleared after improvement roll at end of session.",
            "type": "boolean",
            "default": false,
            "examples": [false]
          }
        }
      },
      "examples": [[
        { "id": "bestiologi",      "name": "Beast Lore",      "name_sv": "Bestiologi",      "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "bluffa",          "name": "Bluffing",        "name_sv": "Bluffa",          "linked_attribute": "CHA", "value": 4,  "trained": false, "improvement_mark": false },
        { "id": "fingerfardighet", "name": "Sleight of Hand", "name_sv": "Fingerfärdighet", "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "finna_dolda_ting","name": "Spot Hidden",     "name_sv": "Finna dolda ting","linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "frammande_sprak", "name": "Languages",       "name_sv": "Främmande språk", "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "hantverk",        "name": "Crafting",        "name_sv": "Hantverk",        "linked_attribute": "STR", "value": 6,  "trained": false, "improvement_mark": false },
        { "id": "hoppa_klattra",   "name": "Acrobatics",      "name_sv": "Hoppa & klättra", "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "jakt_fiske",      "name": "Hunting & Fishing","name_sv": "Jakt & fiske",   "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "kopsla",          "name": "Bartering",       "name_sv": "Köpslå",          "linked_attribute": "CHA", "value": 4,  "trained": false, "improvement_mark": false },
        { "id": "lakekonst",       "name": "Healing",         "name_sv": "Läkekonst",       "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "myter_legender",  "name": "Myths & Legends", "name_sv": "Myter & Legender","linked_attribute": "INT", "value": 10, "trained": true,  "improvement_mark": false },
        { "id": "rida",            "name": "Riding",          "name_sv": "Rida",            "linked_attribute": "AGL", "value": 10, "trained": true,  "improvement_mark": true },
        { "id": "simma",           "name": "Swimming",        "name_sv": "Simma",           "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "sjokunnighet",    "name": "Seamanship",      "name_sv": "Sjökunnighet",    "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "smyga",           "name": "Sneaking",        "name_sv": "Smyga",           "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "undvika",         "name": "Evade",           "name_sv": "Undvika",         "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "upptrada",        "name": "Performance",     "name_sv": "Uppträda",        "linked_attribute": "CHA", "value": 8,  "trained": true,  "improvement_mark": false },
        { "id": "upptacka_fara",   "name": "Awareness",       "name_sv": "Upptäcka fara",   "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "vildmarksvana",   "name": "Bushcraft",       "name_sv": "Vildmarksvana",   "linked_attribute": "INT", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "overtala",        "name": "Persuasion",      "name_sv": "Övertala",        "linked_attribute": "CHA", "value": 8,  "trained": true,  "improvement_mark": false }
      ]]
    },

    "weapon_skills": {
      "title": "Weapon Skills",
      "title_sv": "Vapenfärdigheter",
      "description": "The 10 weapon skills. Same structure as base skills. Listed separately on the paper sheet.",
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["id", "value", "improvement_mark"],
        "properties": {
          "id": {
            "description": "Weapon skill identifier.",
            "type": "string",
            "examples": ["svard"]
          },
          "name": {
            "type": "string",
            "examples": ["Swords"]
          },
          "name_sv": {
            "type": "string",
            "examples": ["Svärd"]
          },
          "linked_attribute": {
            "type": "string",
            "enum": ["STR", "AGL"],
            "examples": ["STR"]
          },
          "value": {
            "type": "integer",
            "minimum": 3,
            "maximum": 18,
            "examples": [12]
          },
          "trained": {
            "type": "boolean",
            "examples": [true]
          },
          "improvement_mark": {
            "type": "boolean",
            "default": false,
            "examples": [false]
          }
        }
      },
      "examples": [[
        { "id": "armborst",  "name": "Crossbows",  "name_sv": "Armborst",  "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "hammare",   "name": "Hammers",    "name_sv": "Hammare",   "linked_attribute": "STR", "value": 12, "trained": true,  "improvement_mark": false },
        { "id": "kniv",      "name": "Knives",     "name_sv": "Kniv",      "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "pilbage",   "name": "Bows",       "name_sv": "Pilbåge",   "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "slagsmål",  "name": "Brawling",   "name_sv": "Slagsmål",  "linked_attribute": "STR", "value": 6,  "trained": false, "improvement_mark": false },
        { "id": "slunga",    "name": "Slings",     "name_sv": "Slunga",    "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "spjut",     "name": "Spears",     "name_sv": "Spjut",     "linked_attribute": "STR", "value": 12, "trained": true,  "improvement_mark": true },
        { "id": "stav",      "name": "Staves",     "name_sv": "Stav",      "linked_attribute": "AGL", "value": 5,  "trained": false, "improvement_mark": false },
        { "id": "svard",     "name": "Swords",     "name_sv": "Svärd",     "linked_attribute": "STR", "value": 12, "trained": true,  "improvement_mark": false },
        { "id": "yxa",       "name": "Axes",       "name_sv": "Yxa",       "linked_attribute": "STR", "value": 6,  "trained": false, "improvement_mark": false }
      ]]
    },

    "secondary_skills": {
      "title": "Secondary Skills",
      "title_sv": "Sekundära färdigheter",
      "description": "Magic school skills and any other secondary skills. On the paper sheet these are blank lines that the player fills in. Most characters have 0–1 entries; mages have their school skill here.",
      "type": "array",
      "minItems": 0,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": ["id", "value", "improvement_mark"],
        "properties": {
          "id": {
            "type": "string",
            "examples": ["animism"]
          },
          "name": {
            "type": "string",
            "examples": ["Animism"]
          },
          "name_sv": {
            "type": "string",
            "examples": ["Animism"]
          },
          "linked_attribute": {
            "type": "string",
            "const": "INT",
            "examples": ["INT"]
          },
          "value": {
            "type": "integer",
            "minimum": 3,
            "maximum": 18,
            "examples": [10]
          },
          "trained": {
            "type": "boolean",
            "examples": [true]
          },
          "improvement_mark": {
            "type": "boolean",
            "default": false,
            "examples": [false]
          }
        }
      },
      "examples": [[]]
    },

    "heroic_abilities_and_spells": {
      "title": "Abilities & Spells",
      "title_sv": "Förmågor & Besvärjelser",
      "description": "Free-form list on the paper sheet. Includes heroic abilities, kin abilities, and prepared spells. Each entry has a name and WP cost.",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "id": {
            "description": "Machine-readable ID matching corebook-heroic-abilities.json, if applicable.",
            "type": ["string", "null"],
            "examples": ["forkampe"]
          },
          "name": {
            "description": "English display name.",
            "type": "string",
            "examples": ["Guardian"]
          },
          "name_sv": {
            "description": "Swedish name as it would appear on the paper sheet.",
            "type": "string",
            "examples": ["Förkämpe"]
          },
          "type": {
            "description": "Category of ability: heroic_ability, kin_ability, spell, or cantrip.",
            "type": "string",
            "enum": ["heroic_ability", "kin_ability", "spell", "cantrip"],
            "examples": ["heroic_ability"]
          },
          "wp_cost": {
            "description": "Willpower point cost to activate. 0 for passive abilities. Cantrips always cost 1 WP.",
            "type": ["integer", "string"],
            "examples": [2]
          },
          "school": {
            "description": "Magic school for spells/cantrips. Null for non-magic abilities.",
            "type": ["string", "null"],
            "enum": ["General", "Animism", "Elementalism", "Mentalism", null],
            "examples": [null]
          },
          "spell_level": {
            "description": "Spell rank (1–5) for spells. Null for cantrips and non-spell abilities.",
            "type": ["integer", "null"],
            "minimum": 1,
            "maximum": 5,
            "examples": [null]
          },
          "prepared": {
            "description": "Whether a spell is currently prepared. Always true for cantrips (always prepared). Null for non-spell entries.",
            "type": ["boolean", "null"],
            "examples": [null]
          }
        }
      },
      "examples": [[
        { "id": "forkampe",    "name": "Guardian",   "name_sv": "Förkämpe",   "type": "heroic_ability", "wp_cost": 2, "school": null, "spell_level": null, "prepared": null },
        { "id": null,          "name": "Adaptive",   "name_sv": "Anpasslig",  "type": "kin_ability",    "wp_cost": 3, "school": null, "spell_level": null, "prepared": null }
      ]]
    },

    "weapons": {
      "title": "Weapons",
      "title_sv": "Vapen",
      "description": "Weapon/shield slots on the paper sheet. The sheet has space for multiple rows in a table with columns: Weapon/Shield, Grip, Range, Damage, Durability (Brytvärde), Properties (Egenskaper). Weapons 'at hand' (up to 3) are kept ready; others go in packing.",
      "type": "array",
      "maxItems": 6,
      "items": {
        "type": "object",
        "required": ["name", "grip", "damage"],
        "properties": {
          "id": {
            "description": "Weapon ID matching corebook-equipment.json equipment list.",
            "type": ["string", "null"],
            "examples": ["broadsword"]
          },
          "name": {
            "title": "Weapon / Shield",
            "title_sv": "Vapen / Sköld",
            "description": "Display name of the weapon or shield.",
            "type": "string",
            "examples": ["Broadsword"]
          },
          "name_sv": {
            "type": "string",
            "examples": ["Bredsvärd"]
          },
          "grip": {
            "title": "Grip",
            "title_sv": "Grepp",
            "description": "One-handed (1H) or two-handed (2H).",
            "type": ["string", "null"],
            "enum": ["1H", "2H", null],
            "examples": ["1H"]
          },
          "str_requirement": {
            "title": "STR Requirement",
            "description": "Minimum STR to wield without penalty.",
            "type": ["integer", "null"],
            "examples": [10]
          },
          "range": {
            "title": "Range",
            "title_sv": "Räckvidd",
            "description": "Melee range in meters, or special value like 'STR' for thrown weapons, or numeric for ranged weapons.",
            "type": ["integer", "string"],
            "examples": [2]
          },
          "damage": {
            "title": "Damage",
            "title_sv": "Skada",
            "description": "Base damage dice.",
            "type": "string",
            "examples": ["2d6"]
          },
          "durability": {
            "title": "Durability",
            "title_sv": "Brytvärde",
            "description": "Current durability value. Decreases when weapon/shield is damaged. Null for unarmed/improvised.",
            "type": ["integer", "null"],
            "examples": [15]
          },
          "durability_max": {
            "description": "Maximum durability value for reference.",
            "type": ["integer", "null"],
            "examples": [15]
          },
          "properties": {
            "title": "Properties",
            "title_sv": "Egenskaper",
            "description": "Weapon property tags.",
            "type": "array",
            "items": { "type": "string" },
            "examples": [["Piercing", "Slashing"]]
          },
          "skill_id": {
            "description": "ID of the weapon skill used for this weapon.",
            "type": "string",
            "examples": ["svard"]
          },
          "is_masterwork": {
