{
  "name": "dragonbane-unbound",
  "private": true,
  "version": "0.1.0",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "setup": "pnpm install && pnpm supabase:init && pnpm supabase:up && pnpm supabase:migrate && pnpm supabase:verify",
    "comfyui:setup": "python3 scripts/comfyui/comfyui.py setup",
    "comfyui:server": "python3 scripts/comfyui/comfyui.py run-server",
    "comfyui:doctor": "python3 scripts/comfyui/comfyui.py doctor",
    "comfyui:kins": "python3 scripts/comfyui/comfyui.py generate --job scripts/comfyui/jobs/kins.example.yaml",
    "supabase:init": "node scripts/supabase-init.mjs",
    "supabase:up": "docker compose up -d",
    "supabase:down": "docker compose down",
    "supabase:migrate": "node scripts/supabase-migrate.mjs",
    "supabase:verify": "node scripts/supabase-verify.mjs",
    "supabase:seed-users": "node scripts/seed-users.mjs",
    "supabase:verify-auth": "node scripts/verify-auth.mjs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.8.1",
    "turbo": "^1.13.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0"
  }
}
